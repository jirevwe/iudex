{
  "name": "iudex",
  "version": "1.0.0",
  "type": "module",
  "description": "JavaScript API testing framework with built-in governance and security checks",
  "main": "index.js",
  "exports": {
    ".": "./index.js",
    "./server": "./server/index.js",
    "./server/express": "./server/handlers/express.js",
    "./server/fastify": "./server/handlers/fastify.js",
    "./server/http": "./server/handlers/http.js",
    "./database/client": "./database/client.js",
    "./database/repository": "./database/repository.js"
  },
  "bin": {
    "iudex": "./cli/index.js"
  },
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:unit": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/unit",
    "test:integration": "node cli/index.js run",
    "init": "node cli/index.js init",
    "validate": "node cli/index.js validate",
    "report": "node cli/index.js report",
    "publish-results": "node cli/index.js publish",
    "dev": "node --watch cli/index.js run"
  },
  "keywords": [
    "api",
    "testing",
    "governance",
    "security",
    "rest",
    "http"
  ],
  "author": "Raymond Tukpe",
  "license": "MIT",
  "dependencies": {
    "@faker-js/faker": "^8.4.1",
    "ajv": "^8.12.0",
    "axios": "^1.6.0",
    "boxen": "^5.1.2",
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "dayjs": "^1.11.19",
    "express": "^5.2.1",
    "fastify-plugin": "^5.0.1",
    "glob": "^11.0.3",
    "joi": "^17.11.0",
    "js-yaml": "^4.1.0",
    "lodash": "^4.17.21",
    "ora": "^5.4.1",
    "pg": "^8.16.3",
    "pino": "^10.3.0",
    "pino-pretty": "^13.1.3",
    "postman-request": "^2.88.1-postman.33",
    "table": "^6.8.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.0",
    "@testcontainers/postgresql": "^11.11.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "playwright": "^1.58.0",
    "testcontainers": "^11.11.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
