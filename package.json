{
  "name": "@rtukpe/iudex",
  "version": "1.0.6",
  "type": "module",
  "description": "API testing framework with built-in governance and security checks",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rtukpe/iudex.git"
  },
  "homepage": "https://github.com/rtukpe/iudex#readme",
  "bugs": {
    "url": "https://github.com/rtukpe/iudex/issues"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./server": {
      "types": "./dist/server/index.d.ts",
      "import": "./dist/server/index.js"
    },
    "./server/express": {
      "types": "./dist/server/handlers/express.d.ts",
      "import": "./dist/server/handlers/express.js"
    },
    "./server/fastify": {
      "types": "./dist/server/handlers/fastify.d.ts",
      "import": "./dist/server/handlers/fastify.js"
    },
    "./server/http": {
      "types": "./dist/server/handlers/http.d.ts",
      "import": "./dist/server/handlers/http.js"
    },
    "./database/client": {
      "types": "./dist/database/client.d.ts",
      "import": "./dist/database/client.js"
    },
    "./database/repository": {
      "types": "./dist/database/repository.d.ts",
      "import": "./dist/database/repository.js"
    }
  },
  "bin": {
    "iudex": "./dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:unit": "node --experimental-vm-modules node_modules/jest/bin/jest.js --testPathPattern=src/",
    "test:integration": "node dist/cli/index.js run",
    "init": "node dist/cli/index.js init",
    "validate": "node dist/cli/index.js validate",
    "report": "node dist/cli/index.js report",
    "publish-results": "node dist/cli/index.js publish",
    "dev": "npm run build && node --watch dist/cli/index.js run",
    "migrate": "node-pg-migrate",
    "migrate:create": "node-pg-migrate create",
    "migrate:up": "node-pg-migrate up",
    "migrate:down": "node-pg-migrate down",
    "migrate:status": "node-pg-migrate up --dry-run",
    "lint:pkg": "publint",
    "prepublishOnly": "npm run build && npm run test:unit && npm run lint:pkg",
    "preversion": "npm run test:unit",
    "postversion": "git push && git push --tags"
  },
  "files": [
    "dist",
    "database",
    "templates",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "keywords": [
    "api",
    "testing",
    "governance",
    "security",
    "rest",
    "http",
    "api-testing",
    "test-framework",
    "typescript"
  ],
  "author": "Raymond Tukpe",
  "license": "MIT",
  "dependencies": {
    "@faker-js/faker": "^8.4.1",
    "ajv": "8.18.0",
    "axios": "1.13.5",
    "boxen": "^5.1.2",
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "dayjs": "^1.11.19",
    "express": "^5.2.1",
    "fastify-plugin": "^5.0.1",
    "glob": "^11.0.3",
    "joi": "^17.11.0",
    "js-yaml": "4.1.1",
    "lodash": "4.17.23",
    "ora": "^5.4.1",
    "pg": "^8.18.0",
    "pino": "^10.3.0",
    "pino-pretty": "^13.1.3",
    "postman-request": "^2.88.1-postman.33",
    "table": "^6.8.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.0",
    "publint": "^0.2.7",
    "@testcontainers/postgresql": "^11.11.0",
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/lodash": "^4.17.23",
    "@types/node": "^25.2.0",
    "@types/pg": "^8.16.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "9.26.0",
    "jest": "^29.7.0",
    "node-pg-migrate": "^8.0.4",
    "playwright": "^1.58.0",
    "testcontainers": "^11.11.0",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
